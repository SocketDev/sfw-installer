{
  "name": "sfw",
  "version": "2.0.4",
  "description": "Socket Firewall wrapper that verifies latest release and then runs npm with original args.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SocketDev/sfw-installer"
  },
  "bin": {
    "sfw": "dist/sfw.mjs"
  },
  "files": [
    "dist/sfw.mjs"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && esbuild src/sfw.ts --bundle --platform=node --format=esm --outfile=dist/sfw.mjs --banner:js='#!/usr/bin/env node\nimport { createRequire } from \"module\";\nconst require = createRequire(import.meta.url);\n'",
    "prepublishOnly": "npm run build",
    "check": "biome check",
    "check:fix": "biome check --fix"
  },
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^24.5.2",
    "@types/proper-lockfile": "^4.1.4",
    "esbuild": "^0.25.10",
    "proper-lockfile": "4.1.2",
    "typescript": "^5.9.2",
    "yocto-spinner": "^1.0.0"
  },
  "//": "lock transitives so we can avoid vulnerabilities even if lockfile ignored",
  "overrides": {
    "proper-lockfile": {
      "graceful-fs": "4.2.11",
      "retry": "0.12.0",
      "signal-exit": "3.0.7"
    },
    "yocto-spinner": {
      "yoctocolors": "2.1.2"
    }
  },
  "preferGlobal": true,
  "bundleDependencies": [
    "proper-lockfile",
    "graceful-fs",
    "retry",
    "signal-exit",
    "yocto-spinner"
  ]
}
